<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/recCardfvr"
    tools:ignore="InvalidId">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ngoisao"
            />
        <TextView
            android:layout_width="26dp"
            android:layout_height="16dp"
            android:text="4.8"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-1dp"
            />

    </RelativeLayout>
    <ImageView
        android:id="@+id/anhsanphamfvr"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/anhdemo"
        />
    <TextView
        android:id="@+id/tensanphamnhafvr"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="130dp"
        android:text="Chese Burger"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="150dp"
        >
        <TextView
            android:id="@+id/giasanphamnhafvr"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="25.000"
            android:textSize="11sp"
            android:gravity="center|left"
            android:textColor="#FF9431"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:text="VNÄ"
            android:textSize="11sp"
            android:gravity="center|left"
            android:textColor="#FF9431"
            />
        <TextView
            android:id="@+id/soluotthich"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="105dp"
            android:text="1"
            android:textSize="11sp"
            android:gravity="center|right"
            android:textColor="@color/black"
            android:layout_marginTop="-7dp"
            />
        <ImageButton
            android:id="@+id/traitimbth"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="140dp"
            android:background="@drawable/traitimdo"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>