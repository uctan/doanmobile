<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trangchunguoidung">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/background_start" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icongiohang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="EASYADS"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/thongbao" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/giohang" />
            </LinearLayout>

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="70dp"
                android:layout_marginStart="20dp"
                android:text="Chào mừng"
                android:textColor="@color/white"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/tennguoidungtrangchu"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:layout_marginTop="70dp"

                android:text="Chào mừng"
                android:layout_marginStart="130dp"
                android:textColor="@color/white"

                android:textSize="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/background_search"
                android:hint="           Search ...."
                android:paddingStart="10dp"
                android:textColorHighlight="@color/white" />

            <ViewFlipper
                android:layout_width="346dp"
                android:layout_height="180dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="224dp"
                android:layout_marginEnd="25dp"
                android:autoStart="true"
                android:flipInterval="2000"
                android:inAnimation="@android:anim/fade_in"
                android:outAnimation="@android:anim/fade_out">

                <ImageView
                    android:id="@+id/home1"
                    android:layout_width="346dp"
                    android:layout_height="180dp"
                    android:background="@drawable/home1"

                    />

                <ImageView
                    android:id="@+id/home2"
                    android:layout_width="346dp"
                    android:layout_height="180dp"
                    android:background="@drawable/home2"
                    android:contentDescription="home1" />

                <ImageView
                    android:id="@+id/home3"
                    android:layout_width="346dp"
                    android:layout_height="180dp"
                    android:background="@drawable/home3"
                    android:contentDescription="home1" />
            </ViewFlipper>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="430dp"
                android:padding="20dp">

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="160dp"
                    android:background="@drawable/home4" />

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/home5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="393dp"
                android:layout_height="150dp"
                android:layout_marginTop="680dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                >
                <HorizontalScrollView
                    android:layout_width="393dp"
                    android:layout_height="150dp">
                    <LinearLayout
                        android:layout_width="393dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="10dp"
                        >

                        <ImageView
                            android:id="@+id/bansanphamtrangchu"
                            android:layout_width="88dp"
                            android:layout_height="142dp"
                            android:scaleType="center"
                            android:src="@drawable/buger" />

                        <ImageView
                            android:id="@+id/livenhe"
                            android:layout_width="88dp"
                            android:layout_height="142dp"
                            android:scaleType="center"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/hotdog" />

                        <ImageView
                            android:layout_width="88dp"
                            android:layout_height="142dp"
                            android:scaleType="center"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/thit" />

                        <ImageView
                            android:layout_width="88dp"
                            android:layout_height="142dp"
                            android:scaleType="center"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/piza" />
                    </LinearLayout>
                </HorizontalScrollView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="393dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="620dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thể loại"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-100dp"

                    android:text="Show all"
                    android:textSize="16dp"
                    android:textStyle="bold"

                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/arrows" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="830dp"
                android:text="Đề xuất"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:layout_marginTop="880dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="230dp"
                            android:layout_height="153dp"
                            android:scaleType="center"
                            android:src="@drawable/home6" />

                        <ImageView
                            android:layout_width="230dp"
                            android:layout_height="153dp"
                            android:layout_marginLeft="20dp"
                            android:scaleType="center"
                            android:src="@drawable/home7" />
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="1040dp"
                android:layout_marginStart="5dp"


                >

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/home"
                        />
                    <TextView
                        android:layout_width="31dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="40dp"
                        android:textSize="11sp"
                        android:text="Home"
                        android:layout_marginStart="3dp"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/timkiem"
                        />
                    <TextView
                        android:layout_width="31dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="40dp"
                        android:textSize="11sp"
                        android:text="Shop"
                        android:layout_marginStart="3dp"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    >

                    <ImageView
                        android:id="@+id/yeuthichtrangchu"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/yeuthich"
                        />
                    <TextView
                        android:layout_width="51dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="40dp"
                        android:textSize="11sp"
                        android:text="Yêu thích"
                        android:layout_marginStart="0dp"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    >

                    <ImageView
                        android:id="@+id/donhang"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/donhang"
                        />
                    <TextView
                        android:layout_width="51dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="40dp"
                        android:textSize="11sp"
                        android:text="Đơn hàng"
                        android:layout_marginStart="0dp"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    >

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/nguoidung"
                        />
                    <TextView
                        android:layout_width="51dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="40dp"
                        android:textSize="11sp"
                        android:text="Cá nhân"
                        android:layout_marginStart="0dp"
                        />

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>