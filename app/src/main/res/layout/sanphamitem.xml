<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/recCard"
    tools:ignore="InvalidId">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ngoisao"
            />
        <TextView
            android:id="@+id/trungbinhdanhgia"
            android:layout_width="26dp"
            android:layout_height="16dp"
            android:text="4.8"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-1dp"
            />
        <TextView
            android:id="@+id/soluongbanduoc"
            android:layout_width="26dp"
            android:layout_height="16dp"
            android:text="4.8"
            android:layout_marginStart="120dp"
            android:layout_marginTop="-1dp"
            />
        
    </RelativeLayout>
    <ImageView
        android:id="@+id/anhsanpham"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/anhdemo"
        />
    <TextView
        android:id="@+id/tensanphamnha"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="130dp"
        android:text="Chese Burger"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="150dp"
        >
        <TextView
            android:id="@+id/giasanphamnha"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="25.000"
            android:textSize="11sp"
            android:gravity="center|left"
            android:textColor="#FF9431"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="70dp"
            android:text="VNĐ"
            android:textSize="11sp"
            android:gravity="center|left"
            android:textColor="#FF9431"
            />
        <TextView
            android:id="@+id/soluotthich"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="105dp"
            android:text="1"
            android:textSize="11sp"
            android:gravity="center|right"
            android:textColor="@color/black"
            android:layout_marginTop="-7dp"
            />
        <ImageButton
            android:id="@+id/traitimbth"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="140dp"
            android:background="@drawable/traitimbth"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/discountsanpham"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="160dp"
        android:text="25"
        android:textSize="11sp"
        android:gravity="center|left"
        android:textColor="@color/black"
        />
    <TextView

        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="160dp"
        android:text="%"
        android:textSize="13sp"
        android:gravity="center|left"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="160dp"
        android:text="Số lượng:"
        android:textSize="11sp"
        android:gravity="center|left"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/soluonghang"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="160dp"
        android:text="10"
        android:textSize="11sp"
        android:gravity="center|left"
        android:textColor="@color/black"
        />

</androidx.cardview.widget.CardView>